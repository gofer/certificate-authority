#!/bin/sh

# 環境の読み出し
if [ -f "$(dirname $0)/.env" ]; then
  source $(dirname $0)/.env
fi

# 設定ファイルのディレクトリ
CONFIG_DIR=${CONFIG_DIR:=.}

# CRL生成

## ルートCA
openssl ca \
  -gencrl \
  -md sha256 \
  -config "${CONFIG_DIR}/openssl.cfg" \
  -section CA_root \
  -extensions v3_root_ca \
  -out root_ca.crl

## 中間CA
openssl ca \
  -gencrl \
  -md sha256 \
  -config "${CONFIG_DIR}/openssl.cfg" \
  -section CA_inter \
  -extensions v3_inter_ca \
  -out inter_ca.crl
